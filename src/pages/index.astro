---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
import Card from '../components/ProjectsSample.astro';

let hcDescription = `Happy Closet is an application created to 
help solve the headache of the morning routine. 
The application saves a virtual copy of the items 
in your closet, allowing you to make outfits based 
on those items. Happy Closet takes this information 
to help you pick out your outfit in the morning.`;
let mwpDescription =
  "Minnesota Women's Press Content Manager is a project my team designed and built for the editing team at the non-profit publication of the same name.";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <div class="page-top">
        <h2>
          <mark
            >Software Engineer seeking employer for steady relationship.</mark
          >
        </h2>

        <p>
          I am a passionate geek, wholeheartedly and without apology. I love
          researching and often go on 'deep dives' into the topics I am
          interested in at the time. Currently, those dives tend to be into
          topics related to Software Development, clothing design, and food
          science and history. Hit me up if you have a favorite family recipe! I
          am always up for a good recipe for Pad-Thai, Ramen, or Hot Dish.
        </p>
      </div>
      <h1 class="project">Projects</h1>
      <div class="proj-cards">
        <div class="card">
          <Card
            title="Happy Closet"
            image_src="/happy_closet_icon.jpg"
            video_src="HC-demo-vid-compressed.mp4"
            description={hcDescription}
            url="/projects/happy_closet"
          />
        </div>
        <div class="card">
          <Card
            title="Minnesota Women's Press Content Manager"
            image_src="/MWP-icon.png"
            video_src="/mwp-demo-website.mp4"
            url="/projects/womens_press"
            description={mwpDescription}
          />
        </div>
      </div>
    </main>
    <Footer />
    <style>
      .page-top {
        max-width: 700px;
        margin: 12px;
      }
      .proj-cards {
        display: flex;
        flex-direction: row;
      }
      @media (max-width: 1504px) {
        .proj-cards {
          flex-direction: column;
        }
      }
      mark {
        background-color: rgba(138, 201, 240, 0.75);
        padding: 5px;
      }

      main {
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      p {
        margin-top: 100px;
        margin-bottom: 100px;
        line-height: 40px;
        font-size: 20px;
        font-family: serif;
      }
      h1 {
        margin-bottom: 100px;
        font-size: 50px;
      }

      h2 {
        font-size: 35px;
        margin-top: 50px;
      }
      .project {
        letter-spacing: 0.3rem;
        font-weight: 100;
      }

      .card {
        margin: 50px;
      }
    </style>
  </body>
</html>
