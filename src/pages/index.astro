---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
import Card from '../components/ProjectsSample.astro';

let hcDescription = `Happy Closet is an application created to 
help solve the headache of the morning routine. 
The application saves a virtual copy of the items 
in your closet, allowing you to make outfits based 
on those items. Happy Closet takes this information 
to help you pick out your outfit in the morning.`;
let mwpDescription =
  "Minnesota Women's Press Content Manager is a project my team designed and built for the editing team at the non-profit publication of the same name.";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <div class="page-top">
        <h2>
          <mark
            >Software Engineer seeking employer for steady relationship.</mark
          >
        </h2>

        <p>
          I am a Software Engineer with a web development certification from
          <a href="https://www.primeacademy.io/">Prime Digital Academy</a>. As a
          new graduate, I am eager to utilize my talents and believe my
          strengths of problem solving and communication make me a valuable
          asset to any team. I strive to write clean, DRY code, and build
          applications that follow accessibility guidelines and utilize modern
          technologies.
        </p>

        <div id="top-photos">
          <img class="front-image" src='../bulldog.jpeg'/>
        </div>

      </div>
      <h1 class="project">Software Projects</h1>
      <div class="proj-cards">
        <div class="card">
          <Card
            title="Happy Closet"
            image_src="/happy_closet_icon.jpg"
            video_src="HC-demo-vid-compressed.mp4"
            description={hcDescription}
            url="/projects/happy_closet"
          />
        </div>
        <div class="card">
          <Card
            title="MWP Content Manager"
            image_src="/MWP-icon.png"
            video_src="/mwp-demo-website.mp4"
            url="/projects/womens_press"
            description={mwpDescription}
          />
        </div>
      </div>
    </main>
    <Footer />
    <style>

      .front-image{ 
        display: inline;
        aspect-ratio: initial;
        margin: 20px; 
        max-width: 400px; 
        border-radius: 5px;
      }

      #top-photos{ 
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .page-top {
        max-width: 700px;
        margin: 12px;
      }
      .proj-cards {
        display: flex;
        flex-direction: row;
      }
      @media (max-width: 1586px) {
        .proj-cards {
          flex-direction: column;
        }
      }
      mark {
        background-color: rgba(138, 201, 240, 0.75);
        padding: 5px;
      }

      main {
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      p {
        margin-top: 100px;
        margin-bottom: 100px;
        line-height: 40px;
        font-size: 20px;
        font-family: serif;
      }
      h1 {
        margin-bottom: 100px;
        font-size: 50px;
      }

      h2 {
        font-size: 35px;
        margin-top: 50px;
      }
      .project {
        letter-spacing: 0.3rem;
        font-weight: 100;
      }

      .card {
        margin: 50px;
      }
    </style>
  </body>
</html>
